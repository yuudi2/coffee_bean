<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".register_coupon">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4f2e72"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:background="@android:color/transparent"
            android:onClick="go_back"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_icon_before_01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_eb"
            android:text="쿠폰등록하기"
            android:textColor="@color/white"
            android:textSize="18.2dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="20dp">


        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/nanum_eb"
            android:textColor="#555555"
            android:gravity="center"
            android:textSize="14.5dp"
            android:text="MMS로 받으신 선물을 \n등록 할 수 있습니다." />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_icon_gift2" />

        <EditText
            android:id="@+id/coupon_num"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:ems="10"
            android:fontFamily="@font/nanum_r"
            android:hint="선물번호를 입력해주세요"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="#cccccc"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#eeeeee"
        android:orientation="vertical">

            <Button
                android:id="@+id/regis_coupon"
                android:layout_width="350dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_color6"
                android:fontFamily="@font/nanum_eb"
                android:text="등록하기"
                android:textColor="@color/white"
                android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>