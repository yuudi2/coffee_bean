<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:background="#4f2e72"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="27dp"
            android:layout_marginStart="12dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_icon_before_01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_eb"
            android:text="CoffeeBean"
            android:textColor="@color/white"
            android:textSize="18.2dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="369dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/nanum_eb"
            android:text="로그인"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="아이디 입력"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_passwd"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="비밀번호 입력"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:buttonTint="@color/white"
            android:fontFamily="@font/nanum_eb"
            android:text="자동로그인"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/login"
            android:layout_width="200dp"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color1"
            android:fontFamily="@font/nanum_eb"
            android:text="로그인"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/find_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_color2"
            android:text="아이디찾기"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <Button
            android:id="@+id/find_passwd"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_color2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:text="비밀번호찾기" />

    </LinearLayout>

    <Button
        android:id="@+id/join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="#333333"
        android:textColor="@color/white"
        android:theme="@style/btnripple"
        android:textSize="13dp"
        android:text="회원가입            커피빈 멤버스 클럽이 되어보세요!  >" />


</LinearLayout>