<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".my_info">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4f2e72"
        android:orientation="horizontal">

        <ImageButton
            android:onClick="go_back"
            android:id="@+id/back"
            android:layout_width="27dp"
            android:layout_marginStart="12dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_icon_before_01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_eb"
            android:text="카드충전"
            android:textColor="@color/white"
            android:textSize="17dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e7e7e7"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView25"
            android:layout_marginLeft="210dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="17.5dp"
            android:fontFamily="@font/nanum_b"
            android:text="현재 금액  : " />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/now_money"
            android:layout_marginRight="40dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#666666"
            android:textSize="17.5dp"
            android:fontFamily="@font/nanum_eb"
            android:layout_height="wrap_content"
            android:text="10000원" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView27"
            android:layout_marginRight="40dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:textColor="#444444"
            android:textSize="17dp"
            android:fontFamily="@font/nanum_eb"
            android:layout_height="wrap_content"
            android:text="충전 금액" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:textSize="16dp"
                android:fontFamily="@font/nanum_b"
                android:layout_height="wrap_content"
                android:text="1000원" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:fontFamily="@font/nanum_b"
                android:text="5000원" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:fontFamily="@font/nanum_b"
                android:text="10000원" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:fontFamily="@font/nanum_b"
                android:text="20000원" />

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:fontFamily="@font/nanum_b"
                android:text="50000원" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="247dp"
        android:background="#eeeeee"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="170dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_eb"
                    android:gravity="center"
                    android:text="충전 후 금액"
                    android:textColor="@color/black"
                    android:textSize="16dp">

                </TextView>

                <TextView
                    android:id="@+id/order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_eb"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="15000원"
                    android:textColor="#754fa0"
                    android:textSize="19dp">

                </TextView>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/order_now"
                android:layout_width="300dp"
                android:layout_height="53dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_color6"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/nanum_eb"
                android:text="충전하기"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>