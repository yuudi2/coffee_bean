<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DDDDDD"
    tools:context=".join_first">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4f2e72"
        android:orientation="horizontal">

        <ImageButton
            android:onClick="go_back"
            android:id="@+id/back"
            android:layout_width="27dp"
            android:layout_marginStart="12dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_icon_before_01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_eb"
            android:text="CoffeeBean"
            android:textColor="@color/white"
            android:textSize="18.2dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#4f2e72"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/nanum_b"
            android:text="회원가입"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/nanum_b"
            android:text="회원가입 전, 커피빈 멤버스 클럽의\n약관들을 확인해주세요."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="13dp" />
    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="253dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanum_b"
                    android:text="전체동의"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/every_check"
                    android:layout_marginTop="15dp"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:theme="@style/MyCheckBox"/>

            </LinearLayout>

            <View
                android:layout_width="366dp"
                android:layout_marginTop="20dp"
                android:layout_height="1.5dp"
                android:layout_gravity="center"
                android:background="#cccccc" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/service_terms"
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_color4"
                    android:fontFamily="@font/nanum_b"
                    android:text="필수    서비스 이용약관  >"
                    android:textAlignment="viewStart"
                    android:textSize="15dp"
                    />

                <CheckBox
                    android:id="@+id/service_check"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:theme="@style/MyCheckBox" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/card_terms"
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_color4"
                    android:fontFamily="@font/nanum_b"
                    android:text="필수    멤버스카드 이용약관  >"
                    android:textAlignment="viewStart"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/card_check"
                    android:layout_marginTop="15dp"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyCheckBox"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/inform_terms"
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_color4"
                    android:fontFamily="@font/nanum_b"
                    android:text="필수    개인정보 수집 및 이용동의  >"
                    android:textAlignment="viewStart"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/inform_check"
                    android:layout_marginTop="15dp"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyCheckBox"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/locate_terms"
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_color4"
                    android:fontFamily="@font/nanum_b"
                    android:text="선택    위치기반서비스 이용약관  >"
                    android:textAlignment="viewStart"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/locate_check"
                    android:layout_marginTop="15dp"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyCheckBox"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ad_terms"
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_color4"
                    android:fontFamily="@font/nanum_b"
                    android:text="선택    마케팅 활용/광고성 정보 수신동의  "
                    android:textAlignment="viewStart"
                    android:textSize="15dp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MMS" />

                <CheckBox
                    android:id="@+id/mms_check"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyCheckBox"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="9dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:text="이메일" />

                <CheckBox
                    android:id="@+id/email_check"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyCheckBox"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="14dp"
                    android:text="푸시알람" />

                <CheckBox
                    android:id="@+id/push_check"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyCheckBox"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:textSize="13dp"
                android:textColor="#777777"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="마케팅 활용/광고성 정보 수신동의를 하시면 신상품 및 여러정보를 우선적으로 받아보실 수 있습니다.\n\n\n\n\n\n\n" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/agree"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:background="#4f2e72"
            android:fontFamily="@font/nanum_b"
            android:text="동의하고 인증하기"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>
