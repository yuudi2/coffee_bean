<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_border5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/regift_img"
            android:layout_width="9dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="90dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/regift_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:fontFamily="@font/nanum_eb"
                android:text="아메리카노"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/regift_time"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:fontFamily="@font/nanum_eacb"
                android:text="등록일 : 2020 - "
                android:textColor="#555555"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
