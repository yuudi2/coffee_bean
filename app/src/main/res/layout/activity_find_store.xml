<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".find_store">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4f2e72"
        android:orientation="horizontal">

        <ImageButton
            android:onClick="go_back"
            android:id="@+id/imageButton"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_icon_before_01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_eb"
            android:text="매장 찾기"
            android:textColor="@color/white"
            android:textSize="18.2dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp"
        android:fontFamily="@font/nanum_r"
        android:textSize="12dp"
        android:background="#F5F3F4"
        android:textColor="#c4c2c2"
        android:text="현재 위치에서 가까운 순서로 검색되었습니다." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_store"
        android:layout_width="match_parent"
        android:layout_height="662dp">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>